<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A6041"
    android:padding="16dp"
    tools:context=".ListOfListeningActivities">

    <TextView
        android:id="@+id/choose_an_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="CHOOSE AN ACTIVITY"
        android:textColor="#EEFFEE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/back_button_activity_selection"/>

    <ImageButton
        android:id="@+id/back_button_activity_selection"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:contentDescription="Back"
        android:minHeight="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="36dp"
        android:src="@drawable/backbutton" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Scroll"
        android:layout_below="@+id/choose_an_activity_title">

        <LinearLayout
            android:id="@+id/activities_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

    </ScrollView>


</RelativeLayout>